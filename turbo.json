{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["BACKEND_URL", "FRONTEND_URL", "BACKEND_API_TOKEN", "FRONTEND_API_TOKEN"],
  "tasks": {
    "gen": {},
    "migrate:dev": {},
    "migrate:prod": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "format": {},
    "check": {},
    "typecheck": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "deploy": {}
  }
}
