{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", ".env.production"],
  "ui": "tui",
  "tasks": {
    "gen": {
      "dependsOn": ["^gen"]
    },
    "lint": {
      "dependsOn": ["gen"]
    },
    "format": {
      "dependsOn": ["gen"]
    },
    "typecheck": {
      "dependsOn": ["gen", "^typecheck"]
    },
    "dev": {
      "dependsOn": ["gen"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["gen", "^build"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "migrate:dev": {
      "dependsOn": ["gen"]
    },
    "migrate:prod": {
      "env": ["CLOUDFLARE_ACCOUNT_ID", "CLOUDFLARE_API_TOKEN"],
      "dependsOn": ["gen"]
    },
    "deploy": {
      "env": ["CLOUDFLARE_ACCOUNT_ID", "CLOUDFLARE_API_TOKEN"],
      "dependsOn": ["build"]
    },
    "deploy:secret": {
      "env": ["CLOUDFLARE_ACCOUNT_ID", "CLOUDFLARE_API_TOKEN"]
    },
    "staging": {
      "env": ["CLOUDFLARE_ACCOUNT_ID", "CLOUDFLARE_API_TOKEN"],
      "dependsOn": ["build"]
    },
    "staging:secret": {
      "env": ["CLOUDFLARE_ACCOUNT_ID", "CLOUDFLARE_API_TOKEN"]
    }
  }
}
