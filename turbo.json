{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "globalEnv": [
    "BACKEND_URL",
    "FRONTEND_URL",
    "BACKEND_API_TOKEN",
    "FRONTEND_API_TOKEN",
    "CLOUDFLARE_ACCOUNT_ID",
    "CLOUDFLARE_API_TOKEN"
  ],
  "tasks": {
    "gen": {
      "dependsOn": ["^gen"]
    },
    "migrate:dev": {},
    "migrate:prod": {},
    "dev": {
      "dependsOn": ["gen"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["gen"]
    },
    "format": {
      "dependsOn": ["gen"]
    },
    "check": {
      "dependsOn": ["gen"]
    },
    "typecheck": {
      "dependsOn": ["gen", "^typecheck"]
    },
    "build": {
      "dependsOn": ["gen", "^build"]
    },
    "deploy": {
      "dependsOn": ["build"]
    }
  }
}
