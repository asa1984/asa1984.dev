    "wasm-image-optimization": "^0.2.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@asa1984.dev/tsconfig": "workspace:*",
    "@cloudflare/workers-types": "^4.20241004.0",
    "better-sqlite3": "^9.6.0",
    "drizzle-kit": "^0.20.18",
