{
  "name": "@asa1984.dev/frontend",
  "private": true,
  "scripts": {
    "gen": "pnpm run gen:css && pnpm run gen:schema && pnpm run gen:gql",
    "gen:css": "panda codegen",
    "gen:gql": "nitrogql generate",
    "gen:schema": "bun run gen-gql-schema.ts",
    "dev": "rimraf ./next && next dev",
    "watch": "chokidar '**/*.graphql' --initial --command 'pnpm gen:gql'",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "typecheck": "tsc --noEmit",
    "build": "pnpm gen && next build",
    "start": "next start"
  },
  "dependencies": {
    "@asa1984.dev/graphql": "workspace:*",
    "@fontsource-variable/inter": "^5.0.16",
    "@fontsource-variable/jetbrains-mono": "^5.0.19",
    "@fontsource-variable/noto-emoji": "^5.0.17",
    "@fontsource-variable/noto-sans-jp": "^5.0.17",
    "@mdx-js/mdx": "^3.0.0",
    "@pandacss/dev": "^0.22.1",
    "@sniptt/monads": "^0.5.10",
    "@types/mdast": "^4.0.3",
    "@urql/exchange-auth": "^2.1.6",
    "fetch-site-metadata": "^0.2.0",
    "hono": "^3.11.7",
    "katex": "^0.16.9",
    "mdast-util-to-hast": "^13.0.2",
    "next": "^14.0.4",
    "next-mdx-remote": "^4.4.1",
    "node-html-parser": "^6.1.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "rehype-katex": "^7.0.0",
    "rehype-pretty-code": "^0.10.1",
    "remark-breaks": "^4.0.0",
    "remark-comment": "^1.0.0",
    "remark-gemoji": "^8.0.0",
    "remark-gfm": "3",
    "remark-math": "^6.0.0",
    "sass": "^1.69.5",
    "sharp": "^0.33.1",
    "shiki": "^0.14.7",
    "unified": "^11.0.4",
    "unist-util-inspect": "^8.0.0",
    "unist-util-visit": "^5.0.0",
    "urql": "^4.0.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "@nitrogql/cli": "1.6.0-beta.1",
    "@nitrogql/graphql-loader": "1.6.0-beta.1",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/unist": "^3.0.2",
    "chokidar-cli": "^3.0.0",
    "graphql": "^16.8.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}
